							<ComboBoxItem>M</ComboBoxItem>
						</ComboBox>								 			 
								
						<TextBlock Grid.Column="2" Grid.Row="5" Style="{StaticResource LogTextBlock}">Birthdate:</TextBlock>
						<customControls:ValidTextBox x:Name="TextBoxBirthdate" Grid.Column="3" Grid.Row="5" Style="{StaticResource ValidTextBoxStyle}"
														 IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}" TabIndex="17" Margin="2,2,2,2" HorizontalAlignment="Stretch">
							<TextBox.Text>
								<Binding Path="AccessionOrder.PBirthdate" UpdateSourceTrigger="Explicit">
									<Binding.Converter>
										<converter:ShortDateConverter />
									</Binding.Converter>
									<Binding.ValidationRules>
										<validationRules:BirthDateValidation />
									</Binding.ValidationRules>
								</Binding>
							</TextBox.Text>
						</customControls:ValidTextBox>
									 		 			 								 
						<TextBlock Grid.Column="2" Grid.Row="6" Style="{StaticResource LogTextBlock}">SSN:</TextBlock> 
						<customControls:ValidTextBox x:Name="TextBoxSSN" Grid.Column="3" Grid.Row="6" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"
									  Style="{StaticResource ValidTextBoxStyle}" TabIndex="18" Margin="2,2,2,2" HorizontalAlignment="Stretch">
							<TextBox.Text>
								<Binding Path="AccessionOrder.PSSN" UpdateSourceTrigger="Explicit">
									<Binding.Converter>
										<converter:SocialSecurityNumberConverter />
									</Binding.Converter>
									<Binding.ValidationRules>
										<validationRules:SSNValidRule />
									</Binding.ValidationRules>
								</Binding>
							</TextBox.Text>
						</customControls:ValidTextBox>						
									 
						<TextBlock Grid.Column="2" Grid.Row="8" Style="{StaticResource LogTextBlock}">Patient ID:</TextBlock>
						<TextBox Grid.Column="3" Grid.Row="8" Text="{Binding Path=AccessionOrder.PatientId}" Margin="2,2,2,2" HorizontalAlignment="Stretch"  FontSize="12" IsEnabled="False"></TextBox>						

