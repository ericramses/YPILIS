						<TextBlock Grid.Column="4" Grid.Row="7" Style="{StaticResource LogTextBlock}">Patient Type:</TextBlock>
                        <ComboBox Grid.Column="5" Grid.Row="7" Text="{Binding Path=AccessionOrder.PatientType}" HorizontalAlignment="Stretch" FontSize="12" TabIndex="23" BorderBrush="LightGray" BorderThickness="1" Margin="2,2,2,2">
