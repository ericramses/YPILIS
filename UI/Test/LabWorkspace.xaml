										<validationRules:ShortDateValidation />
									</Binding.ValidationRules>
								</Binding>
							</TextBox.Text>
						</customControls:ValidTextBox>					

						<TextBlock Grid.Column="0" Grid.Row="5" Style="{StaticResource LogTextBlock}">Last Name:</TextBlock>
