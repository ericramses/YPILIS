<Window x:Class="YellowstonePathology.UI.WatchBitmap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WatchBitmap">
    <Grid>
        <Grid.RowDefinitions>            
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
                
        <Image Grid.Row="1" Width="300" Height="300"  Name="Image1"></Image>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <ComboBox Grid.Row="2" Width="20">
                <ComboBoxItem>
                    <Button Height="30" Width="90">Stop</Button>
                </ComboBoxItem>
            </ComboBox>
            <Button Click="ButtonGo_Click" Height="30" Width="90">Go</Button>            
        </StackPanel>

    </Grid>
</Window>
