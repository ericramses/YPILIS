<Window x:Class="YellowstonePathology.UI.Login.FinalizeAccession.UnableToAddEpicDistributionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellowstonePathology.UI.Login.FinalizeAccession"
        mc:Ignorable="d"
        Title="Unable To Add Epic Copy To" Height="150" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Margin="10" VerticalAlignment="Center" TextWrapping="Wrap" 
                       Text="An EPIC distribution may not be added to this case.  You can add a Fax or a Web Service distribution or continue without adding the distribution." />

        <Button Grid.Column="1" Grid.Row="2" Name="ButtonFax" Margin="5,5,5,5" Click="ButtonFax_Click" Width="150" Height="40" HorizontalAlignment="Left">Change to Fax</Button>
        <Button Grid.Column="1" Grid.Row="2" Name="ButtonWeb" Margin="5,5,5,5" Click="ButtonWeb_Click" Width="150" Height="40" HorizontalAlignment="Center">Change To Web Service</Button>
        <Button Grid.Column="1" Grid.Row="2" Name="ButtonDoNotAdd" Margin="5,5,5,5" Click="ButtonDoNotAdd_Click" Width="150" Height="40" HorizontalAlignment="Right">Do Not Add</Button>

    </Grid>
</Window>
