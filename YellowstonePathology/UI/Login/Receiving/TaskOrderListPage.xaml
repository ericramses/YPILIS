<UserControl x:Class="YellowstonePathology.UI.Login.Receiving.TaskOrderListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="50"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="50"></RowDefinition>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" BorderBrush="Transparent" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"></Border>
		<TextBlock Grid.Column="0" Grid.Row="0" Margin="20,2,2,2" Text="Task Order List Page" VerticalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"></TextBlock>

		<Grid Grid.Row="1" Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
			</Grid.ColumnDefinitions>


			<Grid Grid.Column="1" Margin="10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"></ColumnDefinition>
					<ColumnDefinition Width="*"></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"></RowDefinition>
					<RowDefinition Height="Auto"></RowDefinition>
					<RowDefinition Height="*"></RowDefinition>
				</Grid.RowDefinitions>

				<TextBlock Grid.Column="0" Grid.Row="0" Text="Patient:" Margin="2,2,2,2" FontSize="14" FontWeight="Bold"></TextBlock>
				<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=AccessionOrder.PatientDisplayName}" Margin="2,2,2,2" FontSize="14"></TextBlock>

				<TextBlock Grid.Column="0" Grid.Row="1" Text="Report No:" Margin="2,2,2,2" FontSize="20" FontWeight="Bold"></TextBlock>
				<TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Path=ReportNo}" Margin="2,2,2,2" FontSize="20"></TextBlock>

				<ListView Name="ListViewTaskOrder" Grid.Column="0" Grid.Row="6" Margin="10,2,2,2" Grid.ColumnSpan="2" ItemsSource="{Binding Path=TaskOrderCollection}">
					<ListView.View>
						<GridView AllowsColumnReorder="True" ColumnHeaderToolTip="Case List">
                            <GridViewColumn DisplayMemberBinding="{Binding Path=ReportNo}" Header="Report No" Width="100"/>
							<GridViewColumn DisplayMemberBinding="{Binding Path=PanelSetName}" Header="Test" Width="200"/>
							<GridViewColumn DisplayMemberBinding="{Binding Path=OrderedByInitials}" Header="Ordered By" Width="80"/>
							<GridViewColumn DisplayMemberBinding="{Binding Path=AssignedTo}" Header="Assigned To" Width="200"/>
							<GridViewColumn DisplayMemberBinding="{Binding Path=AcknowledgedDate, Converter={StaticResource MilitaryDateTimeConverter}}" Header="Acknowledged" Width="110"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=AcknowledgedByInitials}" Header="Acknoledged By" Width="100"/>
						</GridView>
					</ListView.View>
				</ListView>

			</Grid>

		</Grid>

		<Border Grid.Row="2" BorderBrush="Transparent" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"></Border>

		<StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
			<Button Name="ButtonClose" Margin="5,5,5,5" Click="ButtonClose_Click" Width="100" Height="40" Visibility="Collapsed">Close</Button>
			<Button Name="ButtonNext" Margin="5,5,5,5" Click="ButtonNext_Click" Width="100" Height="40" Visibility="Collapsed">Next ></Button>
		</StackPanel>

	</Grid>
</UserControl>
