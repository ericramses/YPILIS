<Window x:Class="YellowstonePathology.UI.Login.CytologyDummySlideLabel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:YellowstonePathology.UI.Converter"
        Title="Cytology Dummy Slide Label" Height="150" Width="300" FontSize="12" WindowStyle="ToolWindow">
    <Grid Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Margin="2" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">Real Report Number:</TextBlock>
        <TextBox Name="TextBoxRealReportNumber" Margin="2" Grid.Column="1" Grid.Row="0" 
                 VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left"></TextBox>        

        <TextBlock Margin="2" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">Dummy Report Number:</TextBlock>
        <TextBox Name="TextBoxDummyReportNumber" Margin="2" Grid.Column="1" Grid.Row="1" 
                 VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left"></TextBox>

        <StackPanel Margin="2" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="ButtonOk" Margin="2" Height="25" Width="70" Click="ButtonOk_Click">OK</Button>
            <Button Name="ButtonClose" Margin="2" Height="25" Width="70" Click="ButtonClose_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>
