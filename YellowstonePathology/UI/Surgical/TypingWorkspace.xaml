<UserControl x:Class="YellowstonePathology.UI.Surgical.TypingWorkspace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:LocalUI="clr-namespace:YellowstonePathology.UI"
    xmlns:SurgicalUI="clr-namespace:YellowstonePathology.UI.Surgical"
    xmlns:CustomControlsUI="clr-namespace:YellowstonePathology.UI.CustomControls"
    xmlns:s="clr-namespace:System;assembly=mscorlib" Loaded="TypingWorkspace_Loaded" Name="UserControlTypingWorkspace">

    <Grid Name="GridTypingV2" KeyUp="GridTyping_KeyUp">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GridSplitter Width="5" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"></GridSplitter>

        <Grid Grid.Column="0" Grid.Row="0" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <TextBox Name="TextBoxSpecialInstructions" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Path=SpecialInstructions}" Visibility="{Binding Path=SpecialInstructionsVisibility}" Foreground="#e12d0e" 
		         BorderThickness="1" Margin="2,2,2,2" Padding="2,2,2,2">
                <TextBox.BorderBrush>
                    <SolidColorBrush x:Name="redBrush" Color="Red" />
                </TextBox.BorderBrush>

                <TextBox.Triggers>
                    <EventTrigger RoutedEvent="Rectangle.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="redBrush" Storyboard.TargetProperty="Color" From="Red" To="White" Duration="0:0:1" 
                        	                AutoReverse="True" RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBox.Triggers>
            </TextBox>
            
            <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2,2,2,2" FontWeight="Bold">Name:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Birthdate:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Physician:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Client:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Pathologist:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold"
                 Foreground="{Binding Path=IsPossibleReportableCase, Converter={StaticResource ReportableCaseConverter}}">Reportable:</TextBlock>

            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Path=AccessionOrder.PatientName}" Margin="2,2,2,2" VerticalAlignment="Center"></TextBlock>

            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="{Binding Path=AccessionOrder.PBirthdate, Converter={StaticResource ShortDateConverter}}" VerticalAlignment="Center"></TextBlock>
                <TextBlock Text="{Binding Path=AccessionOrder.PatientAccessionAge}" Width="50" TextAlignment="Right" VerticalAlignment="Center"></TextBlock>
            </StackPanel>

            <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding Path=AccessionOrder.PhysicianName}" VerticalAlignment="Center"></TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding Path=AccessionOrder.ClientName}" VerticalAlignment="Center"></TextBlock>

            <ComboBox Name="comboBoxPathologistUsers" ItemsSource="{Binding Path=PathologistUsers}" 								 								 
								 DisplayMemberPath="DisplayName" KeyboardNavigation.IsTabStop="False" VerticalAlignment="Center"
                 SelectedValuePath="UserId" 
                 SelectedValue="{Binding Path=SurgicalTestOrder.AssignedToId}"
                 Grid.Column="1" Grid.Row="5" Margin="2,2,30,2" HorizontalAlignment="Stretch" 
                 IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}">
            </ComboBox>

            <CheckBox Grid.Column="1" Grid.Row="6" IsChecked="{Binding Path=SurgicalTestOrder.ReportableCase}"
					  Margin="2,2,2,2" KeyboardNavigation.IsTabStop="False" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}" VerticalAlignment="Center">
            </CheckBox>

            <TextBlock Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Report No:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Date Of Service:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Accession Date:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Accepted By:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Accepted:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Case Final:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="2,2,2,2" FontWeight="Bold">Hold Billing/Audited</TextBlock>

            <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Horizontal">
                <TextBox Name="TextBoxReportNoSearch" Width="100" HorizontalAlignment="Left" KeyDown="TextBoxReportNoSearch_KeyDown" TabIndex="0" Margin="2,2,2,2" VerticalAlignment="Center"></TextBox>
                <Button Click="ButtonRefresh_Click" Margin="2,2,2,2" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Refresh.ico" Margin="2" Height="16"></Image>
                        <TextBlock Margin="2" VerticalAlignment="Center">Refresh</TextBlock>
                    </StackPanel>
                </Button>
                <Button Click="ButtonLast_Click" Margin="2,2,2,2" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Restore.png" Margin="2" Height="16"></Image>
                        <TextBlock Margin="2" VerticalAlignment="Center">Last</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>

            <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding Path=AccessionOrder.CollectionDate, Converter={StaticResource ShortDateConverter}}" VerticalAlignment="Center" Margin="2,2,30,2"/>
            <TextBlock Grid.Column="3" Grid.Row="2" Text="{Binding Path=AccessionOrder.AccessionDate, Converter={StaticResource ShortDateConverter}}" VerticalAlignment="Center" Margin="2,2,2,2"></TextBlock>

            <ComboBox Name="ComboBoxAcceptingUsers" VerticalContentAlignment="Center" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}" VerticalAlignment="Center"
               ItemsSource="{Binding Path=TypingUsers}" 								 								 
               DisplayMemberPath="DisplayName" 
               SelectedValuePath="UserId" KeyboardNavigation.IsTabStop="False" 
               SelectedValue="{Binding Path=SurgicalTestOrder.AcceptedById}" SelectionChanged="ComboBoxAcceptingUsers_SelectionChanged"
               Grid.Column="3" Grid.Row="3" Margin="2,2,30,2" HorizontalAlignment="Stretch">
            </ComboBox>

            <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="4">
                <CheckBox Name="CheckBoxAccepted" IsChecked="{Binding Path=SurgicalTestOrder.Accepted}" Margin="2,2,7,2" 
                  Click="CheckBoxAccepted_Click" KeyboardNavigation.IsTabStop="False" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}" VerticalAlignment="Center"></CheckBox>
                <TextBlock Text="{Binding Path=SurgicalTestOrder.AcceptedDate, Converter={StaticResource ShortDateConverter}}" Margin="2,2,7,2" VerticalAlignment="Center"></TextBlock>
                <TextBlock Text="{Binding Path=SurgicalTestOrder.AcceptedTime, Converter={StaticResource ShortTimeConverter}}" Margin="2,2,2,2" VerticalAlignment="Center"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="5" Margin="21,0,0,0">
                <TextBlock Text="{Binding Path=SurgicalTestOrder.FinalDate, Converter={StaticResource ShortDateConverter}}" Margin="2,2,7,2" VerticalAlignment="Center"></TextBlock>
                <TextBlock Text="{Binding Path=SurgicalTestOrder.FinalTime, Converter={StaticResource ShortTimeConverter}}" Margin="2,2,2,2" VerticalAlignment="Center"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="3" Grid.Row="6" Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=SurgicalTestOrder.HoldBilling}"
                    HorizontalAlignment="Left" Margin="2,2,5,2" KeyboardNavigation.IsTabStop="False" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}" VerticalAlignment="Center"></CheckBox>
                <CheckBox IsChecked="{Binding Path=SurgicalTestOrder.Audited}" VerticalAlignment="Center"
                    HorizontalAlignment="Left" Margin="2,2,5,2" KeyboardNavigation.IsTabStop="False" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}" Click="CheckBoxAudit_Click">
                </CheckBox>
            </StackPanel>
        </Grid>

        <TabControl Name="TabControlLeftMain" Grid.Column="0" Grid.Row="1" Margin="5,5,7,5">

            <TabItem Name="tabItemPatient" Header="Patient" KeyboardNavigation.IsTabStop="False">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="210"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="210"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource TextBlockHeaderRight}">Last Name:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource TextBlockHeaderRight}">First Name:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource TextBlockHeaderRight}">Middle Initial:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="5" Style="{StaticResource TextBlockHeaderRight}">Birthdate:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="6" Style="{StaticResource TextBlockHeaderRight}">Sex:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="7" Style="{StaticResource TextBlockHeaderRight}">SSN:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="8" Style="{StaticResource TextBlockHeaderRight}">Patient Type:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="9" Style="{StaticResource TextBlockHeaderRight}">Insurance:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="10" Style="{StaticResource TextBlockHeaderRight}">MRN/Acct:</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="11" Style="{StaticResource TextBlockHeaderRight}">Patient ID:</TextBlock>

                    <TextBlock Grid.Column="0" Grid.Row="12" Style="{StaticResource TextBlockHeaderRight}" VerticalAlignment="Center">No Charge This Report:</TextBlock>

                    <Button Grid.Column="1" Grid.Row="13" Margin="2" Click="ButtonProviderEntry_Click" Width="200" HorizontalAlignment="Left" IsEnabled="True">Provider Entry</Button>
                    <Button Grid.Column="1" Grid.Row="14" Margin="2" Click="ButtonPatientDetails_Click" Width="200" HorizontalAlignment="Left" IsEnabled="True">Patient Details</Button>
                    <Button Grid.Column="1" Grid.Row="15" Margin="2" Click="ButtonPatientLinking_Click" Width="200" HorizontalAlignment="Left" IsEnabled="True">Patient Linking</Button>
                    <Button Grid.Column="1" Grid.Row="15" Margin="2" Click="ButtonUpdateFromADT_Click" Width="200" HorizontalAlignment="Left" IsEnabled="True">Update from ADT</Button>


                    <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=AccessionOrder.PLastName, Converter={StaticResource UpperCaseConverter}, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left"></TextBox>
                    <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=AccessionOrder.PFirstName, Converter={StaticResource UpperCaseConverter}, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left"></TextBox>
                    <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Path=AccessionOrder.PMiddleInitial, Converter={StaticResource UpperCaseConverter}, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left"></TextBox>
                    <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding Path=AccessionOrder.PBirthdate, Converter={StaticResource ShortDateConverter}}" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left"></TextBox>

                    <ComboBox Grid.Column="1" Grid.Row="6" Text="{Binding Path=AccessionOrder.PSex}" Width="50" 
							Style="{StaticResource NewComboBox}" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}">
                        <ComboBoxItem>F</ComboBoxItem>
                        <ComboBoxItem>M</ComboBoxItem>
                    </ComboBox>

                    <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding Path=AccessionOrder.PSSN, Converter={StaticResource SocialSecurityNumberConverter}}" 
                   Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>

                    <ComboBox Grid.Column="1" Grid.Row="8" Width="100" Style="{StaticResource NewComboBox}" IsEnabled="{Binding Path=FieldEnabler.IsBillingAuditEnabled}">
                        <ComboBox.Text>
                            <Binding Path="AccessionOrder.PatientType">
                                <Binding.ValidationRules>
                                    <ExceptionValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </ComboBox.Text>
                        <ComboBoxItem>IP</ComboBoxItem>
                        <ComboBoxItem>OP</ComboBoxItem>
                        <ComboBoxItem>Not Selected</ComboBoxItem>
                    </ComboBox>

                    <ComboBox Grid.Column="1" Grid.Row="9" Margin="3" Width="100" HorizontalAlignment="Left" Style="{StaticResource NewComboBox}" IsEnabled="{Binding Path=FieldEnabler.IsBillingAuditEnabled}">
                        <ComboBox.Text>
                            <Binding Path="AccessionOrder.PrimaryInsurance">
                                <Binding.ValidationRules>
                                    <ExceptionValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </ComboBox.Text>
                        <ComboBoxItem Content="Not Selected"></ComboBoxItem>
                        <ComboBoxItem Content="Medicare"></ComboBoxItem>
                        <ComboBoxItem Content="Medicaid"></ComboBoxItem>
                        <ComboBoxItem Content="BCHP"></ComboBoxItem>
                        <ComboBoxItem Content="BCBS"></ComboBoxItem>
                        <ComboBoxItem Content="Governmental"></ComboBoxItem>
                        <ComboBoxItem Content="Commercial"></ComboBoxItem>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="10">
                        <TextBox Text="{Binding Path=AccessionOrder.SvhMedicalRecord, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NewTextBox}" Width="75" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>
                        <TextBox Text="{Binding Path=AccessionOrder.SvhAccount, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NewTextBox}" Width="75" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Grid.Row="11" Text="{Binding Path=AccessionOrder.PatientId}" HorizontalAlignment="Left" Width="200" Margin="2"></TextBlock>

                    <CheckBox Grid.Column="1" Grid.Row="12" IsChecked="{Binding Path=SurgicalTestOrder.NoCharge}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"></CheckBox>

                    <TextBlock Grid.Column="2" Grid.Row="2" Style="{StaticResource TextBlockHeaderRight}">Address 1:</TextBlock>
                    <TextBox Grid.Column="3" Grid.Row="2" Text="{Binding Path=AccessionOrder.PAddress1, UpdateSourceTrigger=PropertyChanged}"
							 Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>

                    <TextBlock Grid.Column="2" Grid.Row="3" Style="{StaticResource TextBlockHeaderRight}">Address 2:</TextBlock>
                    <TextBox Name="TextBoxAddress2" Grid.Column="3" Grid.Row="3" Text="{Binding Path=AccessionOrder.PAddress2, UpdateSourceTrigger=PropertyChanged}"
							 Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>

                    <TextBlock Grid.Column="2" Grid.Row="4" Style="{StaticResource TextBlockHeaderRight}">City:</TextBlock>
                    <TextBox Grid.Column="3" Grid.Row="4" Text="{Binding Path=AccessionOrder.PCity, UpdateSourceTrigger=PropertyChanged}"
							 Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>

                    <TextBlock Grid.Column="2" Grid.Row="5" Style="{StaticResource TextBlockHeaderRight}">State:</TextBlock>
                    <TextBox Grid.Column="3" Grid.Row="5" Text="{Binding Path=AccessionOrder.PState, UpdateSourceTrigger=PropertyChanged}"
							 Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>

                    <TextBlock Grid.Column="2" Grid.Row="6" Style="{StaticResource TextBlockHeaderRight}">Zip Code:</TextBlock>
                    <TextBox Grid.Column="3" Grid.Row="6" Text="{Binding Path=AccessionOrder.PZipCode, UpdateSourceTrigger=PropertyChanged}"
							 Style="{StaticResource NewTextBox}" Width="200" HorizontalAlignment="Left" IsEnabled="{Binding Path=FieldEnabler.IsUnprotectedEnabled}"></TextBox>
                </Grid>
            </TabItem>

            <TabItem Name="TabItemSurgical" Header="Surgical" KeyboardNavigation.IsTabStop="False">
                <ScrollViewer>
                    <Grid Margin="2,2,2,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" FontWeight="Bold">Clinical Information:</TextBlock>

                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Margin="0,0,10,0">                    
                            <Hyperlink Click="HyperLinkSetCPTCodes_Click">Set CPT Codes</Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="0,0,2,0">                    
                            <Hyperlink Click="HyperLinkCleanClinicalInformation_Click">Clean</Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <TextBox Name="TextBoxClinical"  Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True"
									Text="{Binding Path=AccessionOrder.ClinicalHistory, UpdateSourceTrigger=PropertyChanged}"
									KeyUp="TextBox_KeyUp" FontSize="12" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" 
									Style="{StaticResource NewTextBox}" SpellCheck.IsEnabled="False">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Import Preop Diagnosis" Click="MenuItemImportPreopDiagnosis_Click"></MenuItem>
                                    <MenuItem Header="Import Special Instructions" Click="MenuItemImportSpecialInstructions_Click"></MenuItem>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBlock  Grid.Column="0" Grid.Row="2" FontWeight="Bold">Gross Description:</TextBlock>
                        <TextBox Name="TextBoxGross"  Grid.Column="0" Grid.Row="3"
									TextWrapping="Wrap" AcceptsReturn="True"
									Text="{Binding Path=SurgicalTestOrder.GrossX, UpdateSourceTrigger=PropertyChanged}"
									KeyUp="TextBox_KeyUp" FontSize="12" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" MinWidth="200"
									Style="{StaticResource NewTextBox}" SpellCheck.IsEnabled="False"></TextBox>

                        <TextBlock  Grid.Column="0" Grid.Row="4" FontWeight="Bold">Microscopic Description:</TextBlock>
                        <TextBox Name="TextBoxMicroscopic"  Grid.Column="0" Grid.Row="5" TextWrapping="Wrap" AcceptsReturn="True"
									Text="{Binding Path=SurgicalTestOrder.MicroscopicX, UpdateSourceTrigger=PropertyChanged}"
									KeyUp="TextBox_KeyUp" FontSize="12" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}"
									MinWidth="200" Style="{StaticResource NewTextBox}" SpellCheck.IsEnabled="False"></TextBox>

                        <Grid Grid.Column="0" Grid.Row="6">
                            <Button ToolTip="Visit CAP Website, cancer section" HorizontalAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/caplogo.ico" Margin="2" Height="16"></Image>
                                    <TextBlock VerticalAlignment="Center" Margin="2">
											<Hyperlink Click="ButtonCAPLink_Click">Cancer Case Summary:</Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </Button>

                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Margin="2,2,2,2">AJCC Stage:</TextBlock>
                                <TextBox Width="200" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" Margin="2,2,2,2"
											Text="{Binding Path=SurgicalTestOrder.AJCCStage, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            </StackPanel>
                        </Grid>

                        <TextBox Name="TextBoxCancerSummary"  Grid.Column="0" Grid.Row="7" TextWrapping="Wrap" AcceptsReturn="True"
									Text="{Binding Path=SurgicalTestOrder.CancerSummary, UpdateSourceTrigger=PropertyChanged}" 
									KeyUp="TextBox_KeyUp" FontSize="12" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}"
									MinWidth="200" Style="{StaticResource NewTextBox}" SpellCheck.IsEnabled="False"></TextBox>

                        <TextBlock  Grid.Column="0" Grid.Row="8" FontWeight="Bold" Text="Specimen:" />

                        <ItemsControl Name="ItemsControlSpecimen"  Grid.Column="0" Grid.Row="9"
										ItemsSource="{Binding Path=BillingSpecimenViewCollection}"
										KeyboardNavigation.IsTabStop="False">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <ItemsPresenter Grid.Column="0" Grid.Row="0" Margin="5"/>
                                    </Grid>
                                </ControlTemplate>
                            </ItemsControl.Template>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="22"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="{Binding Path=SurgicalSpecimen.DiagnosisIdFormatted}" Margin="5">
                                            <TextBlock.ContextMenu>
                                                <ContextMenu Opened="ContextMenu_Opened">
                                                    <MenuItem Tag="{Binding}" Header="Add CPT Codes" Click="ContextMenuAddCptCodes_Click"></MenuItem>
                                                </ContextMenu>
                                            </TextBlock.ContextMenu>
                                        </TextBlock>

                                        <TextBox Name="TextBoxSpecimenType" Text="{Binding Path=SpecimenOrder.Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"
													AcceptsReturn="True" Margin="2" Grid.Row="0" Grid.Column="1" 
													KeyUp="TextBox_KeyUp" FontSize="12" FontWeight="Bold"
													IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.FieldEnabler.IsProtectedEnabled}" 
													MinWidth="300" Style="{StaticResource NewTextBox}" SpellCheck.IsEnabled="False">
                                        </TextBox>
                                        <ComboBox Grid.Column="1" Grid.Row="1" Margin="2,2,2,2" HorizontalAlignment="Stretch" ItemsSource="{Binding Path=SpecimenCollection}" 
                                                    SelectedValuePath="SpecimenId" DisplayMemberPath="SpecimenName" SelectedValue="{Binding Path=SpecimenOrder.SpecimenId}" />

                                        <TextBox Name="TextBoxDiagnosis" Text="{Binding Path=SurgicalSpecimen.Diagnosis, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True"
													Margin="2" Grid.Row="2" Grid.Column="1"  MinWidth="300"
													KeyUp="TextBox_KeyUp" FontSize="12" IsEnabled="{Binding ElementName=TextBoxClinical, Path=IsEnabled}" 
													Style="{StaticResource NewTextBox}" SpellCheck.IsEnabled="False"/>


                                        <ItemsControl ItemsSource="{Binding Path=SurgicalSpecimen.IntraoperativeConsultationResultCollection}"  IsEnabled="{Binding ElementName=TextBoxClinical, Path=IsEnabled}"
														Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"  KeyboardNavigation.IsTabStop="False">
                                            <ItemsControl.Template>
                                                <ControlTemplate TargetType="ItemsControl">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition></RowDefinition>
                                                        </Grid.RowDefinitions>
