        <TabControl Name="TabControlRightMain" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="3,5,5,5">

            <TabItem Name="tabItemDocumentViewer" Header="Document">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <ContentControl Name="ContentControlDocument" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2"></ContentControl>

                    <Menu Grid.Column="0" Grid.Row="1" Height="30" Margin="2,2,2,2" Grid.RowSpan="2">
                        <MenuItem Header="Requisition" Click="MenuItemShowRequisition_Click"></MenuItem>
                        <MenuItem Header="Accession Data Sheet" Click="MenuItemShowAccessionDataSheet_Click"></MenuItem>
                        <MenuItem Header="Patient Face Sheet" Click="MenuItemShowPatientFaceSheet_Click"></MenuItem>
                    </Menu>

                </Grid>
