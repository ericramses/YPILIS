                            <ComboBoxItem>Daily Final List</ComboBoxItem>
                            <ComboBoxItem>Cases Not Audited</ComboBoxItem>
                            <ComboBoxItem>Cases Not Assigned</ComboBoxItem>
                            <ComboBoxItem>SVH Electronic Orders</ComboBoxItem>
                            <ComboBoxItem>PQRI Cases</ComboBoxItem>
                            <ComboBoxItem>No Gross</ComboBoxItem>
                            <ComboBoxItem>No Clinical Info</ComboBoxItem>
