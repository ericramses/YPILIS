                                <MenuItem Click="ContextMenuDictationToCaseFolder_Click" Header="Copy to case folder"></MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=FullPath}" Header="File Name"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=ModifiedDate}" Header="Date"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <TextBlock Grid.Row="2" FontWeight="Bold" Margin="2,2,2,2">Server Dictation</TextBlock>

                    <ListView Grid.Row="3" Name="ListViewServerDictation" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Stretch" Margin="2,2,2,2">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="ContextMenuMoveServerFileToLocal_Click" Header="Move to local"></MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=FullPath}" Header="File Name"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=ModifiedDate}" Header="Date"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button Grid.Row="4" Height="30" Click="ButtonRefreshDictation_Click" HorizontalAlignment="Stretch" Margin="2,2,2,2">Refresh Dictation</Button>
                </Grid>

