                                                            <TextBox Text="{Binding Path=StartDate}" Width="120" HorizontalAlignment="Stretch"
																		Height="20" Margin="2,2,2,2">
                                                                <TextBox.Style>
                                                                    <Style TargetType="TextBox">
                                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                                        <Setter Property="Margin" Value="2"/>
                                                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="TextBox.IsEnabled" Value="False">
                                                                                <Setter Property="TextBox.Foreground" Value="Black"/>
                                                                            </Trigger>
                                                                            <Trigger Property="TextBox.IsEnabled" Value="True">
                                                                                <Setter Property="TextBox.Foreground" Value="Black"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBox.Style>
                                                            </TextBox>

                                                            <TextBox Text="{Binding Path=EndDate}" Width="120" HorizontalAlignment="Stretch"
																		Height="20" Margin="2,2,2,2">
                                                                <TextBox.Style>
                                                                    <Style TargetType="TextBox">
                                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                                        <Setter Property="Margin" Value="2"/>
                                                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="TextBox.IsEnabled" Value="False">
                                                                                <Setter Property="TextBox.Foreground" Value="Black"/>
                                                                            </Trigger>
                                                                            <Trigger Property="TextBox.IsEnabled" Value="True">
                                                                                <Setter Property="TextBox.Foreground" Value="Black"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBox.Style>
                                                            </TextBox>

                                                        </StackPanel>

                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding Path=PanelSetOrderCPTCodeCollection}" Grid.Row="4" Grid.Column="1" KeyboardNavigation.IsTabStop="False" IsEnabled="True">
                                            <ItemsControl.Template>
                                                <ControlTemplate TargetType="ItemsControl">
                                                    <StackPanel Margin="0,0,0,10">
                                                        <ItemsPresenter/>
                                                    </StackPanel>
                                                </ControlTemplate>
                                            </ItemsControl.Template>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.ContextMenu>
                                                            <ContextMenu Opened="ContextMenu_Opened">
                                                                <MenuItem Tag="{Binding Path=PanelSetOrderCPTCodeId}" Header="Delete CPT Code" Click="ContextMenuDeleteCptCode_Click"></MenuItem>
                                                                <MenuItem Tag="{Binding Path=PanelSetOrderCPTCodeId}" Header="Reverse CPT Code" Click="ContextMenuReverseCptCode_Click"></MenuItem>
                                                            </ContextMenu>
                                                        </StackPanel.ContextMenu>
                                                        <TextBlock Width="20" Text="{Binding Path=Quantity}" Margin="2" HorizontalAlignment="Left" FontWeight="Bold" ToolTip="Quantity"></TextBlock>
                                                        <TextBlock Text="{Binding Path=CPTCode, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontWeight="Bold" Margin="2" Width="70" ToolTip="CPT Code"></TextBlock>
                                                        <TextBlock Text="{Binding Path=Modifier, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontWeight="Bold" Margin="2" Width="70" ToolTip="Modifier"></TextBlock>
                                                        <TextBlock Text="{Binding Path=PostDateProxy}" VerticalAlignment="Center" Margin="2" Width="80" ToolTip="Post Date"/>
                                                        <TextBlock Text="{Binding Path=CodeableDescription}" VerticalAlignment="Center" Margin="2"></TextBlock>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding Path=ICD9BillingCodeCollection}" Grid.Row="5" Grid.Column="1" KeyboardNavigation.IsTabStop="False"
														IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.FieldEnabler.IsBillingAuditEnabled}">
                                            <ItemsControl.Template>
                                                <ControlTemplate TargetType="ItemsControl">
                                                    <StackPanel>
                                                        <ItemsPresenter/>
                                                    </StackPanel>
                                                </ControlTemplate>
                                            </ItemsControl.Template>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.ContextMenu>
                                                            <ContextMenu Opened="ContextMenu_Opened">
                                                                <MenuItem Tag="{Binding Path=Icd9BillingId}" Header="Delete ICD9 Code" Click="ContextMenuDeleteIcd9Code_Click"></MenuItem>
                                                            </ContextMenu>
                                                        </StackPanel.ContextMenu>
                                                        <TextBlock Text="{Binding Path=Quantity}" VerticalAlignment="Center"/>
                                                        <TextBlock Text=" - " VerticalAlignment="Center"></TextBlock>
                                                        <TextBlock Text="{Binding Path=Icd9Code}" VerticalAlignment="Center" Margin="2,2,10,2"/>
                                                        <TextBlock Text="{Binding Path=BillingDateProxy}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock  Grid.Column="0" Grid.Row="10" FontWeight="Bold">Comment:</TextBlock>
                        <TextBox Name="textBoxComment"  Grid.Column="0" Grid.Row="11" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Path=SurgicalTestOrder.Comment, UpdateSourceTrigger=PropertyChanged}"
									KeyUp="TextBox_KeyUp" FontSize="12" IsEnabled="{Binding Path=FieldEnabler.IsProtectedEnabled}" MinWidth="200"
									Style="{StaticResource NewTextBox}" SpellCheck.IsEnabled="False"></TextBox>

                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Name="TabItemAncillaryStudies" Header="Ancillary Studies">
                <ScrollViewer>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Background="Gray">
                            <TextBlock Width="75" Background="Gray" Foreground="White" Margin="2,2,2,2">No Charge</TextBlock>
                            <TextBlock Width="30" Background="Gray" Foreground="White" Margin="2,2,2,2">Qty</TextBlock>
                            <TextBlock Width="120" Background="Gray" Foreground="White" Margin="2,2,2,2">Stain</TextBlock>
                            <TextBlock Width="200" Background="Gray" Foreground="White" Margin="2,2,2,2">Result</TextBlock>
                            <TextBlock Width="200" Background="Gray" Foreground="White" Margin="2,2,2,2">Comment</TextBlock>
                            <TextBlock Width="75" Background="Gray" Foreground="White" Margin="2,2,2,2">Dual</TextBlock>
                            <TextBlock Width="75" Background="Gray" Foreground="White" Margin="2,2,2,2">Graded</TextBlock>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding Path=SurgicalTestOrder.TypingStainCollection}"
								  KeyboardNavigation.IsTabStop="False">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <StackPanel Margin="0,0,0,10">
                                        <ItemsPresenter/>
                                    </StackPanel>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Resources/out2.png" Width="17" Height="17" Visibility="{Binding Path=ClientAccessioned, Converter={StaticResource BooleanVisibilityHiddenConverter}}"></Image>
                                        <CheckBox Margin="2,2,2,2" VerticalAlignment="Center" IsChecked="{Binding Path=NoCharge}" ToolTip="No Charge" Width="75"></CheckBox>
