                                        <TextBlock Text="{Binding Path=ProcedureName}" Width="100" Margin="2,2,2,2"/>

                                        <ComboBox VerticalContentAlignment="Center" DisplayMemberPath="StainResult" IsEditable="True"
										    ItemsSource="{Binding Path=ResultList}"					
										    Text="{Binding Path=Result}"
										    Margin="3" Width="200" HorizontalAlignment="Left" IsEnabled="{Binding ElementName=PathologistUserControl, Path=DataContext.FieldEnabler.IsProtectedEnabled}">
                                        </ComboBox>

                                        <TextBox Text="{Binding Path=ReportComment, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" Style="{StaticResource NewTextBox}" Width="200"
											 IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.FieldEnabler.IsProtectedEnabled}"/>
                                        <CheckBox Margin="2,2,2,2" VerticalAlignment="Center" IsChecked="{Binding Path=OrderedAsDual}" ToolTip="Ordered As Dual" Width="75"></CheckBox>
