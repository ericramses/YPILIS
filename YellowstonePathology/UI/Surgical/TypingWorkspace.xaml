                        <ContextMenu>
                            <MenuItem Header="Refresh" Click="MenuItemRefreshDocumentList_Click"></MenuItem>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=FileName}" Header="Date" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

