<UserControl x:Class="YellowstonePathology.UI.DocumentWorkspace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">  
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Print" Click="ContextMenuItemPrint_Click"></MenuItem>
                <MenuItem Header="Open For Editing" Click="ContextMenuItemEdit_Click"></MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.ColumnDefinitions>
		    <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
	    <Grid.RowDefinitions>		    
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>               
        
        <ContentControl Name="ContentControlDocument" Grid.Column="0" Grid.Row="0"></ContentControl>
        
    </Grid>  
</UserControl>
